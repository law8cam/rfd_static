---
interface Props {
	title: string;
}

const { title } = Astro.props;
// const { title = "Redforest Digital" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Red Forest Digital Ltd - Software Development and Technical Consultancy" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--primary: #2d3436;
		--accent: #d63031;
		--text: #2d3436;
		--bg: #f9f9f9;
	}
	body {
		font-family: system-ui, sans-serif;
		background: var(--bg);
		color: var(--text);
		margin: 0;
	}
</style>