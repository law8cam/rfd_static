---
import Layout from "../layouts/Layout.astro";
import rfdLogo from "../rfd_logo.png";
import { Image } from "astro:assets"; // 1. Add this import
---

<Layout title="Red Forest Digital">
	<main>
		<div class="container">
			<!-- <img src={rfdLogo.src} alt="Red Forest Digital Logo" class="logo" /> -->
			<!-- <Image src={rfdLogo} alt="Red Forest Digital Logo" class="logo" /> -->
			<img
				src="/rfd_logo.png"
				alt="Red Forest Digital Logo"
				class="logo"
			/>

			<!-- <h1>Red Forest Digital Ltd</h1> -->
			<p class="tagline">
				Innovative Software • Mobile Platforms • Technical Strategy
			</p>

			<section class="description">
				<p>
					<strong> Red Forest Digital </strong> is a technology company
					dedicated to the engineering and growth of high-performance mobile
					applications and software solutions.
				</p>
				<p>
					Our primary expertise lies in building utility-driven
					products that streamline digital experiences. Currently, our
					core focus is the development and optimization of our
					flagship mobile platform, <strong
						>Trove - Smart Notification</strong
					>.
				</p>

				<div class="product-link">
					<a
						href="https://www.troveapps.com/"
						target="_blank"
						rel="noopener noreferrer"
					>
						Explore Trove Smart Notifications &rarr;
					</a>
				</div>

				<p>
					Beyond our internal product pipeline, we provide specialized
					technical consultancy and bespoke development services. We
					partner with organizations to deliver robust cloud
					infrastructure and scalable mobile architecture tailored to
					complex business needs.
				</p>
			</section>

			<div class="contact-box">
				<span>General Inquiries</span>
				<a href="mailto:admin@redforestdigital.com"
					>contact@redforestdigital.com</a
				>
			</div>

			<footer>
				<div class="legal-info">
					<p>
						&copy; {new Date().getFullYear()} Red Forest Digital Ltd
					</p>
					<p>
						Registered in England & Wales &bull; Company No.
						17032545
					</p>
					<address>
						167-169 Great Portland Street, 5th Floor, London, W1W
						5PF
					</address>
				</div>
			</footer>
		</div>
	</main>
</Layout>

<style>
	/* Styles remain consistent with our previous clean design */
	main {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 100vh;
		padding: 20px;
	}

	/* This creates the transparent background layer */
	main::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1; /* Puts it behind the container */

		background-image: url("/background.png");
		background-size: cover; /* Use 'contain' if you prefer the whole image to fit */
		background-position: center;
		/* Adjust this value (0.0 to 1.0) to control transparency */
		/* opacity: 0.3;  */
	}

	.container {
		max-width: 700px;
		/* Kept solid so your text pops */
		background: rgba(255, 255, 255, 0.95);
		padding: 3.5rem;
		border-radius: 12px;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
		border-top: 6px solid var(--accent);
		text-align: center;
		position: relative; /* Ensures it stays above the background */
	}
	.logo {
		max-width: 240px;
		margin-bottom: 2rem;
	}
	h1 {
		font-size: 1.8rem;
		margin: 0;
		color: var(--primary);
		letter-spacing: -0.5px;
	}
	.tagline {
		color: #7f8c8d; /* More neutral for a placeholder */
		font-weight: 500;
		font-size: 0.85rem;
		margin-bottom: 2.5rem;
		text-transform: uppercase;
		letter-spacing: 1.5px;
	}
	.description {
		text-align: left;
		line-height: 1.8;
		color: #444;
		margin-bottom: 2.5rem;
		font-size: 1.05rem;
	}
	.product-link {
		margin: 2rem 0;
		text-align: center;
	}
	.product-link a {
		display: inline-block;
		padding: 0.7rem 1.5rem;
		border: 2px solid var(--primary);
		color: var(--primary);
		text-decoration: none;
		border-radius: 4px;
		font-weight: 600;
		transition: all 0.2s ease;
	}
	.product-link a:hover {
		background-color: var(--primary);
		color: white;
	}
	.contact-box {
		/* border-top: 1px solid #eee; */
		padding-top: 2rem;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}
	.contact-box span {
		font-size: 0.8rem;
		text-transform: uppercase;
		color: #95a5a6;
		letter-spacing: 1px;
	}
	.contact-box a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
		font-size: 1.1rem;
	}
	footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid #eee; /* Subtle separator */
    }

    .legal-info {
        font-size: 0.75rem;
        line-height: 1.6;
        color: #95a5a6; /* Muted grey */
        text-align: center;
    }

    .legal-info p {
        margin: 0.2rem 0;
        font-weight: 500;
    }

    .legal-info address {
        font-style: normal; /* Removes the default italic address look */
        margin-top: 0.5rem;
        letter-spacing: 0.5px;
        color: #bdc3c7; /* Even lighter for the address */
    }
</style>
